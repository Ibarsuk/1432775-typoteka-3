extends layout.pug

block content
  main.main-page.main-page--padding
    section(class='main-page__publication publication')
      h1(class='publication__title') Комментарии
      ul(class='publication__list')
        each comment of comments
          li(class='publication__list-item')
            div(class='publication__header')
              img(class='publication__list-image' src=`/img/${comment.user.avatar}` width='20' height='20' alt='Аватар пользователя')
              b(class='publication__list-name') #{`${comment.user.firstName} ${comment.user.lastName}`}
              time(class='publication__item-time' datetime=comment.createdAt) #{formatDate(comment.createdAt)}
            a(class='publication__item-text' href=`/articles/${comment.articleId}`) #{comment.text}
            p(class='publication__text-strong') #{comment.Article.title}
            a(class='publication__button button button--close-item' type='button' href=`/articles/${comment.Article.id}/comments/delete/${comment.id}`)
              span.visually-hidden Закрыть строку списка

